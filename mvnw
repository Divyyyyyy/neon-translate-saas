set -e

BASEDIR="$(cd "$(dirname "$0")" && pwd)"

JAVA_CMD="${JAVA_HOME:+$JAVA_HOME/bin/}java"

if ! command -v "$JAVA_CMD" >/dev/null 2>&1; then
  echo "Error: Java executable not found. Please set JAVA_HOME or add java to PATH." >&2
  exit 1
fi

WRAPPER_JAR="$BASEDIR/.mvn/wrapper/maven-wrapper.jar"
WRAPPER_MAIN_CLASS="org.apache.maven.wrapper.MavenWrapperMain"

if [ ! -r "$WRAPPER_JAR" ]; then
  echo "Error: Maven wrapper JAR not found at $WRAPPER_JAR" >&2
  echo "Make sure .mvn/wrapper/maven-wrapper.jar exists." >&2
  exit 1
fi

exec "$JAVA_CMD" \
  -Dmaven.multiModuleProjectDirectory="$BASEDIR" \
  -cp "$WRAPPER_JAR" \
  "$WRAPPER_MAIN_CLASS" "$@"


